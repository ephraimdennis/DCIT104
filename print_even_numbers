#include <iostream>

using namespace std;

int main()
{
int sum = 0, number_of_even = 0;

for(int a = 1; a < 10000; i++)

if((i % 2) == 0){
    sum = sum + a;
    number_of_even++;
}
double avg = sum/number_of_even;
cout << "The average of all even numbers between 1 and 10000 is ";
cout << avg;

return 0;
}
